<%= link_to_function("Print", "javascript:print()") %><br />
<b>Bill Id</b> : <%= @bill.id %>&nbsp;&nbsp;
<b>Customer Name</b> : <%= @bill.customer_name %>&nbsp;&nbsp;
<b>Status</b> : <%= @bill.status %>&nbsp;&nbsp;
<b>Discount</b> : <%= number_to_currency @bill.discount, :unit=>"Rs " %>&nbsp;&nbsp;
