		<th>Total</th>
	</tr>
	<%= render :partial => 'bill_list', :collection => @bill_lists %>
	<tr>
		<th></th>
		<th>Total</th>
		<th><%= number_to_currency @bill.total, :unit=>"Rs " %></th>
	</tr>
</table>

